<Window Style="{DynamicResource MainWindowStyle}" x:Class="ReBorn.WPF.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ReBorn.WPF.UI"
        xmlns:ui="clr-namespace:ReBorn.WPF.UI"
        mc:Ignorable="d"
        Height="450" Width="800"
        
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        
        x:Name="window">
    
    
    <Window.Resources>
        <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Background="Black">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <!--Title Bar-->
                                    <RowDefinition Height="49"/>

                                    <!--Search Bar-->
                                    <RowDefinition Height="49"/>
                                    
                                    <!--Bookmarks-->
                                    <RowDefinition Height="36"/>

                                    <!--TabItem Content-->
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--Title Bar-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                        <ListBox ItemsSource="{Binding DirectoryTabItems}"
                                             SelectedItem="{Binding CurrentDirectoryItem}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}"/>
                                                    <Button Content="X"
                                                            Command="{Binding DataContext.CloseCommand, ElementName=window }"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <Button Grid.Column="1" 
                                            Command="{Binding AddTabItemCommand}"
                                            Content="+"
                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                        <Button Width="44"
                                                Height="30"
                                                Click="HideButton_OnClick">_</Button>
                                        <Button Width="44"
                                                Height="30"
                                                Click="ExpandButton_OnClick">P</Button>
                                        <Button Width="44"
                                                Height="30"
                                                Click="CloseButton_OnClick">X</Button>
                                    </StackPanel>
                                </Grid>

                                <!--Search Bar-->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0"
                                            Margin="2"
                                            Content="&lt;-"
                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                            Command="{Binding CurrentDirectoryItem.MoveBackCommand}"/>
                                    <Button Grid.Column="1"
                                            Content="-&gt;"
                                            Margin="2"
                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                            Command="{Binding CurrentDirectoryItem.MoveForwardCommand}"/>
                                    <Button Grid.Column="2"
                                            Content="0"
                                            Margin="2"
                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                            Command="{Binding CurrentDirectoryItem.RefreshCommand}"/>


                                    <TextBox Grid.Column="3" 
                                             Background="White" 
                                             VerticalAlignment="Center"
                                             FontSize="16"
                                             Text="{Binding CurrentDirectoryItem.FilePath}"/>
                                </Grid>

                                <!--Bookmarks-->
                                <StackPanel Background="#FF212121"
                                            Grid.Row="2">
                                    <Menu>
                                        <MenuItem Header="Projects"/>
                                    </Menu>
                                </StackPanel>
                                
                                <!--Content-->
                                <ContentControl Grid.Row="3"
                                                Content="{Binding CurrentDirectoryItem}">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <ui:ReBornTabCtrl/>
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>
                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
</Window>
