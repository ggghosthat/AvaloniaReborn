                                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    SnapsToDevicePixels="true"
                                                                    Width="32"
                                                                    Height="32"
                                                                    CornerRadius="10">
                                                                <Viewbox Width="24"
                                                                             Height="24"
                                                                             Stretch="Uniform">
                                                                    <Canvas Width="24" Height="24">
                                                                        <Path Fill="White" Data="M14 16.94V12.94H5.08L5.05 10.93H14V6.94L19 11.94Z" />
